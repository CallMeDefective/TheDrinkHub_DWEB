@model IEnumerable<TheDrinkHub_DWEB.Models.Encomenda>

<h2>Encomendas</h2>
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Utilizador</th>
            <th>Data</th>
            <th>Total</th>
            <th>Estado</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var e in Model)
        {
            <tr>
                <td>@e.Id</td>
                <td>@e.Utilizador.Nome</td>
                <td>@e.DataEncomenda.ToString("g")</td>
                <td>@e.Total.ToString("C")</td>
                <td>@e.Estado</td>
                <td><a asp-action="Details" asp-route-id="@e.Id">Details</a></td>
                <td><a asp-action="Delete" asp-route-id="@e.Id">Delete</a></td>
                <td><a asp-action="Edit" asp-route-id="@e.Id">Edit</a></td>
            </tr>
        }
    </tbody>
</table>
