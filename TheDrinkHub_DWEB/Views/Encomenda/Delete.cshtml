@model TheDrinkHub_DWEB.Models.Encomenda

@{
    ViewData["Title"] = "Eliminar Encomenda";
}

<h1>Eliminar Encomenda</h1>

<h3>Tens a certeza que queres eliminar esta encomenda?</h3>

<div>
    <h4>Detalhes da Encomenda</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Utilizador
        </dt>
        <dd class="col-sm-10">
            @Model.Utilizador.Nome
        </dd>

        <dt class="col-sm-2">
            Morada
        </dt>
        <dd class="col-sm-10">
            @Model.Utilizador.Morada
        </dd>

        <dt class="col-sm-2">
            Data da Encomenda
        </dt>
        <dd class="col-sm-10">
            @Model.DataEncomenda.ToString("dd/MM/yyyy HH:mm")
        </dd>

        <dt class="col-sm-2">
            Estado
        </dt>
        <dd class="col-sm-10">
            @Model.Estado
        </dd>

        <dt class="col-sm-2">
            Total
        </dt>
        <dd class="col-sm-10">
            @Model.Total.ToString("C")
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Eliminar</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
