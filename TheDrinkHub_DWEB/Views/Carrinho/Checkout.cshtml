@model TheDrinkHub_DWEB.Models.ViewModels.CheckoutViewModel

@{
    ViewData["Title"] = "Checkout";
    Layout = "~/Views/Home/LayoutMain.cshtml";
    var total = ViewBag.Total;
}

<div class="flex items-center justify-center min-h-screen bg-white pt-16">
    <div class="container mx-auto p-6 max-w-md bg-white shadow rounded">
        <h2 class="text-2xl font-bold mb-4 text-center">Pagamento</h2>

        <div class="mb-4 text-lg">
            <strong>Total a pagar:</strong> @total.ToString("C")
        </div>

        <form asp-action="FinalizarPagamento" method="post">
            <div class="mb-4">
                <label asp-for="Cartao" class="block"></label>
                <input asp-for="Cartao" class="w-full p-2 border rounded" maxlength="16" />
                <span asp-validation-for="Cartao" class="text-red-600 text-sm"></span>
            </div>

            <div class="mb-4">
                <label asp-for="Validade" class="block"></label>
                <input asp-for="Validade" type="date" class="w-full p-2 border rounded" />
                <span asp-validation-for="Validade" class="text-red-600 text-sm"></span>
            </div>

            <div class="mb-4">
                <label asp-for="CVV" class="block"></label>
                <input asp-for="CVV" class="w-full p-2 border rounded" maxlength="3" />
                <span asp-validation-for="CVV" class="text-red-600 text-sm"></span>
            </div>

            <button type="submit" class="w-full bg-green-600 text-white p-2 rounded hover:bg-green-700 transition">
                Pagar Agora
            </button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
