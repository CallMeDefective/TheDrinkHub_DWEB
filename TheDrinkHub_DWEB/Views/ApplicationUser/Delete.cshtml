@model TheDrinkHub_DWEB.Models.ApplicationUser

@{
    ViewData["Title"] = "Eliminar Utilizador";
}

<h1>Eliminar Utilizador</h1>

<h3>Tem a certeza que deseja eliminar este utilizador?</h3>

<div>
    <h4>Utilizador</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Nome</dt>
        <dd class="col-sm-10">@Model.Nome</dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>

        <dt class="col-sm-2">Data de Nascimento</dt>
        <dd class="col-sm-10">@Model.DataNascimento.ToShortDateString()</dd>

        <dt class="col-sm-2">NIF</dt>
        <dd class="col-sm-10">@Model.Nif</dd>

        <dt class="col-sm-2">Morada</dt>
        <dd class="col-sm-10">@Model.Morada</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Eliminar</button> |
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
