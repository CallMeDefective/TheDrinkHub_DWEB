@model TheDrinkHub_DWEB.Models.ApplicationUser

@{
    ViewData["Title"] = "Detalhes do Utilizador";
}

<h1>Detalhes do Utilizador</h1>

<div>
    <h4>Utilizador</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Nome</dt>
        <dd class="col-sm-10">@Model.Nome</dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>

        <dt class="col-sm-2">Data de Nascimento</dt>
        <dd class="col-sm-10">@Model.DataNascimento.ToShortDateString()</dd>

        <dt class="col-sm-2">NIF</dt>
        <dd class="col-sm-10">@Model.Nif</dd>

        <dt class="col-sm-2">Morada</dt>
        <dd class="col-sm-10">@Model.Morada</dd>
    </dl>
</div>

<p>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Editar</a> |
    <a asp-action="Index" class="btn btn-secondary">Voltar</a>
</p>
